{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "es2022",
        "target": "es2017",
        "moduleResolution": "node",
        "esModuleInterop": false,
        "declaration": true,
        "outDir": "dist",
        "strict": true,
    },
    "include": ["src/**/*", "libs/**/*", "entrypoint.ts", "@types/**/*"],
    "exclude": [
        "node_modules",
        "tools",
        "dist"
    ],
    "outFile": "./dist/compiled.ts",
    "resolve": {
        "extensions": [".ts", ".js", ".d.ts"]
    }
}
